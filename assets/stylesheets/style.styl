@import 'nib'
@import 'nib/gradients'
@import 'jeet'
@import 'rupture'

@import '_colors'
@import '_mixins'

@import '_typography'
@import '_camping-icons'

reset-html5()

html
  box-sizing(border-box)

*
  box-sizing(inherit)

  &:before,
  &:after
    box-sizing(inherit)

body
  margin 0
  color white
  background linear-gradient(top, $yellowColor, $greenColor, $blueColor 90%)
  font-family $bodyFont
  font-weight 300

img
  display block
  max-width 100%

.button
  font-weight 600
  font-family $headingFont
  text-transform uppercase
  transition all 300ms ease-in-out
  background-color rgba($primaryColor, 0)
  border 3px $primaryColor solid
  color $primaryColor
  padding 0.925em 1.25em 0.75em 1.25em
  display: inline-block
  text-decoration none
  line-height 1

  &:hover
    background-color rgba($primaryColor, 1)
    color white

h1, h2, h3, h4, h5, h6
  font-family $headingFont

.title
  font-size 2em
  text-align center
  margin 0 0 2em 0

.container
  cf()
  padding 0 1em
  max-width 72em
  margin 0 auto

  +above($desktop)
    padding 0

.homepage-header
  position relative
  color white
  padding 2em 0.5em 10em

  .logo-outer
    display table
    height 100%
    margin 0 auto

    .logo-inner
      display table-cell
      vertical-align middle
      text-transform uppercase
      text-align center
      text-shadow 0 1px 1px rgba(black, 0.08)

.site-nav
  display none
  transform(translateZ(0))
  position absolute
  right 0
  bottom 0
  left 0
  z-index 3
  border-bottom 0.25em transparent solid

  +above($tablet)
    display block

  .nav-links
    cf()
    reset-list()
    margin 0 auto

    li
      span(3/12)
      text-align center
      text-transform uppercase

      a
        color white
        font-weight 600
        font-family $headingFont
        text-decoration none
        position relative
        display block
        padding 1em 0

        &:before,
        &:after
          content ''
          transition transform 300ms ease-in-out
          border-bottom 0.25em white solid
          transform(scaleX(0))
          position absolute
          margin 0 auto
          width 100%
          right 0
          left 0

        &:before
          top 0

        &:after
          bottom 0

        &:hover
          &:before,
          &:after
            transform(scaleX(1))


  &.fixed-top
    position fixed
    border-bottom 0.25em white solid
    border-top 0.25em white solid
    box-shadow 0 0.125em 0.25em 0 rgba(black, 0.1)
    background white
    bottom auto
    z-index 100
    top 0

    li a
      color $blueColor

      &:before,
      &:after
        border-color $blueColor

#braidwood
  background white
  color $primaryColor

body > section
  padding 8em 0

  &#details
    padding 0

.lodging
  cf()
  reset-list()

  .place
    text-align center
    position relative
    padding 2em

    i
      font-size 4em
      color #ddd

    p
      color #555
      min-height 5em

    +above($tablet)
      span(1/2)
      text-align center
      padding 2em

    +above($desktop)
      span(1/3)
      text-align center
      padding 2em

.wedding-party
  text-align center
  reset-list()
  cf()
  padding 5%

  li
    col(1/2)
    border-radius 50%
    padding-bottom 4%

    &:first-child
      display none

    &:nth-child(2n+1)
      transform(translateY(50%))
      margin-right 0

    +above($slate)
      col(1/3)

      &:first-child
        display inherit
        width 15%

      &:nth-child(2n+1)
        transform(translateY(0))
        margin-right 3%

      &:nth-child(3n)
        margin-right 0

      &:nth-child(13)
        margin-left 15%

    +above($desktop)
      col(1/5)

      &:first-child
        width 7.5%

      &:nth-child(3n)
        margin-right 3%

      &:nth-child(5n)
        margin-right 0

      &:nth-child(11)
        margin-left 10%

      &:nth-child(13)
        margin-left 0

    .flipper
      transform(perspective(1000px))
      transition 600ms ease-in-out
      transform-style preserve-3d
      padding-bottom 100%
      position relative

      .front
        z-index 2
        border-radius 100%
        border 8px white solid

      .back
        transition 600ms ease-in-out
        transform(rotateX(180deg))
        border-radius 50%
        background darken(white, 50%)
        color darken($primaryColor, 50%)

        .info
          h3
            margin 0

          label
            font-size 0.75em

        .info-outer
          display table
          height 100%
          margin 0 auto

        .info-inner
          display table-cell
          vertical-align middle

      .front,
      .back
        backface-visibility(hidden)
        position absolute
        top 0
        left 0
        height 100%
        width 100%

    &:hover
      .flipper
        transform(rotateX(180deg))

        .back
          background white
          color $primaryColor
