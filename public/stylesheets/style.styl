@import 'nib'
@import 'jeet'
@import 'rupture'
@import 'mixins'

@import 'typography'

reset-html5()

body
  margin 0
  font-family $body-font

img
  display block
  max-width 100%

.container
  cf()
  padding 0 0.5em
  max-width 60em
  margin 0 auto

  +above($mobile)
    padding 0

.site-nav
  background red

  .nav-links
    cf()
    reset-list()
    max-width 40em
    margin 0 auto

    li
      span(3/12)
      text-align center

      a
        display block
        padding 1em

.wedding-party
  ul
    reset-list()
