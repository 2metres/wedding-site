@import 'nib'

global-reset()

@font-face
  font-family 'Salome'
  src url('/fonts/salome_fine_italic.eot')
  src url('/fonts/salome_fine_italic.eot?#iefix') format('embedded-opentype'),
       url('/fonts/salome_fine_italic.woff') format('woff'),
       url('/fonts/salome_fine_italic.ttf') format('truetype'),
       url('/fonts/salome_fine_italic.svg#salome_fineregular') format('svg')
  font-weight normal
  font-style normal

.site-header
  color white
  height 70%
  position relative
  background url('/images/glass.jpg') no-repeat center center fixed rgba(0, 0, 0, 0.1)
  background-size cover
  text-align center
  margin-bottom 20em
  transition all 300ms linear
  -filter blur(10px)

  h1
    padding 3em 0
    font-family 'Salome'
    font-weight normal
    font-size: 3em;
